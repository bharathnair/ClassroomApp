        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.nair.bharath.Pillaigram.Home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.nair.bharath.Pillaigram.Likes.LikesActivity"></activity>
        <activity android:name="com.nair.bharath.Pillaigram.Profile.ProfileActivity"></activity>
        <activity android:name="com.nair.bharath.Pillaigram.Share.ShareActivity"></activity>
        <activity android:name="com.nair.bharath.Pillaigram.Search.SearchActivity"></activity>
        <activity android:name="com.nair.bharath.Pillaigram.Profile.AccountSettingsActivity"></activity>
        <activity android:name=".Login.LoginActivity"></activity>
